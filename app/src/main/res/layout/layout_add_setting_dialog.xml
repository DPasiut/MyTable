<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@android:dimen/notification_large_icon_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/setting_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="description..."
                android:maxLength="20"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/value_input"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:hint="value..."
                    android:inputType="number"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <Button
                    android:id="@+id/set_value_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="set value" />
                <Button
                    android:id="@+id/set_curr_poss_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="current position" />

            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/position_setting_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:gravity="center"
                android:hint="00"
                android:background="@drawable/back"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>